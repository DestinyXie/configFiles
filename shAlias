# shell alias
alias vi='vim'
alias grep='grep --color=auto'
# alias ls='ls --color=tty'
alias ls='ls'
alias l='ls -lh'
alias ll='ls -alh'
alias ..='cd ..'
alias ~='cd ~'
alias psg='ps -fe | grep '
alias dc='cd'

# git alias
alias gpl='git pull origin'
alias gps='git push origin'
alias gplm='gpl master'
alias gpsm='gps master'
alias gd='git diff'
alias gs='git st'
alias gol='git oneline'
alias ga='git add'
alias gc='git ci -m'
alias gb='git br'
alias gg='git add -A && git ci -m "auto ci" && git push origin master'

# forever commands
alias pl='pm2 list'
alias pms='pm2 start'
alias pr='pm2 restart'
alias pmst='pm2 stop'

# disable Ctrl-D to logout
set -o ignoreeof
export ignoreeof=10000

# shell alias for webpack
alias we='webpack --display-error-details'
