# shell alias
alias vi='vim'
alias grep='grep --color=auto'
alias ls='ls --color=tty'
alias l='ls -lh'
alias ll='ls -alh'
alias ..='cd ..'
alias ~='cd ~'
alias psg='ps -fe | grep '
alias dc='cd'

# git alias
alias gpl='git pull origin'
alias gps='git push origin'
alias gplm='gpl master'
alias gpsm='gps master'
alias gd='git diff'
alias gs='git st'
alias gol='git oneline'
alias ga='git add'
alias gc='git ci -m'
alias gb='git br'

# forever commands
alias fl='forever list'
alias fs='forever start'
alias fr='forever restart'
alias fra='forever restartall'
alias fst='forever stop'
alias fsta='forever stopall'

# shell alias for baidubce-cli
alias up='baidubce bos'
alias upp='baidubce bos --put-object'
alias ups='baidubce bos --put-superfile'
alias upc='baidubce bos -c'
alias upl='baidubce bos --list-objects'

# disable Ctrl-D to logout
set -o ignoreeof
export ignoreeof=10000

# shell alias for webpack
alias we='webpack --display-error-details'
